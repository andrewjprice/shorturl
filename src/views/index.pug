html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= "URL Shortener"
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.8.2/css/bulma.min.css")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")
        script(type="text/javascript" src="./../../public/js/index.js")
    body
        .section.hero.is-info
            .div.hero-body
                .container
                    h1.title URL Shortener
                    h2.subtitle Generates a short url
        .section
            .container
                div.box
                    form(id="urlForm" method="post")
                        div.field.is-grouped
                            p.control.is-expanded
                                input(type="text" name="url" placeholder="Enter a long url").has-text-centered.input
                            button.button.is-info Shorten
                div.columns.is-centered
                    span(id="result").is-medium
